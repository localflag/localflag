{
  "name": "@localflag/react",
  "version": "0.0.1",
  "description": "Type-safe feature flags for React with built-in DevTools",
  "type": "module",
  "license": "MIT",
  "author": "Daniel Gietmann",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localflag/localflag.git",
    "directory": "packages/react"
  },
  "homepage": "https://localflag.io",
  "bugs": {
    "url": "https://github.com/localflag/localflag/issues"
  },
  "keywords": [
    "react",
    "feature-flags",
    "feature-toggles",
    "devtools",
    "typescript",
    "hooks"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
