---
import '../styles/global.css';
import UmamiAnalyticsBridge from '../components/UmamiAnalyticsBridge';

interface Props {
  title?: string;
}

const { title = "LocalFlag - Feature Flags for React" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Type-safe feature flags for React with built-in DevTools. Ship features confidently." />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-void text-text-primary antialiased overflow-x-hidden">
    <UmamiAnalyticsBridge client:load />
    <slot />
  </body>
</html>
